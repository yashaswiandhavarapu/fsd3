Condition.jsx

import React, { useState } from "react";

export default function ConditionalRenderingAge() {
  const [age, setAge] = useState("");
  const [message, setMessage] = useState("");

  const handleLogin = () => {
    if (age >= 18) {
      setMessage("Welcome! 🎉 You are logged in.");
    } else {
      setMessage("Cannot login ❌");
    }
  };

  return (
    <div>
      <h2>Login Check</h2>
      <input
        type="number"
        placeholder="Enter age"
        value={age}
        onChange={(e) => setAge(e.target.value)}
      />
      <button onClick={handleLogin}>Login</button>

      <p>{message}</p>
    </div>
  );
}


App.jsx
import ConditionalRendering from "./conditition";
function App(){

return(
  <ConditionalRendering></ConditionalRendering>
);

}
export default App;
